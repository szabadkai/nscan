{
    "name": "nscan",
    "version": "1.0.0",
    "description": "Modern animated network scanner CLI tool with comprehensive device discovery",
    "type": "module",
    "main": "src/index.js",
    "bin": {
        "nscan": "./cli.mjs"
    },
    "scripts": {
        "build:dev": "esbuild src/cli.js --bundle --platform=node --format=esm --outfile=dist/cli.mjs --loader:.js=jsx --external:react --external:react/jsx-runtime --external:ink --external:ink-* --external:chalk --external:commander --external:gradient-string --external:oui-data --packages=external",
        "start": "npm run build:dev && node dist/cli.mjs",
        "dev": "npm run build:dev && node --watch dist/cli.mjs",
        "build": "npm run build:linux && npm run build:macos && npm run build:win",
        "build:linux": "pkg . --targets node18-linux-x64 --output dist/nscan-linux --compress GZip",
        "build:macos": "pkg . --targets node18-macos-x64,node18-macos-arm64 --output dist/nscan-macos --compress GZip",
        "build:win": "pkg . --targets node18-win-x64 --output dist/nscan-win.exe --compress GZip"
    },
    "pkg": {
        "targets": [
            "node18-linux-x64",
            "node18-macos-x64",
            "node18-macos-arm64",
            "node18-win-x64"
        ],
        "outputPath": "dist",
        "compress": "GZip"
    },
    "keywords": [
        "network",
        "scanner",
        "nmap",
        "network-discovery",
        "device-detection",
        "cli",
        "terminal-ui"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "cli-boxes": "^3.0.0",
        "commander": "^11.1.0",
        "gradient-string": "^2.0.2",
        "ink": "^4.4.1",
        "ink-big-text": "^2.0.0",
        "ink-gradient": "^3.0.0",
        "ink-spinner": "^5.0.0",
        "ink-table": "^3.1.0",
        "ink-text-input": "^5.0.1",
        "nanospinner": "^1.1.0",
        "oui-data": "^1.0.0",
        "react": "^18.2.0"
    },
    "devDependencies": {
        "@yao-pkg/pkg": "^5.11.5",
        "esbuild": "^0.20.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
